<table id="example2" class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>Nama pemilik</th>
    <th>Nama bank</th>
    <th>Nomor rekening</th>
    <th>Aksi</th>
  </tr>
  </thead>
  <tbody>
    <% for( let index = 0; index < bank.length; index++ ) { %>
      <tr>
        <td><%= index + 1 %> </td>
        <td><%= bank[index].name %> </td>
        <td><%= bank[index].bankName %> </td>
        <td><%= bank[index].noRekening %> </td>
        <td>
          <form action="/bank/delete/<%= bank[index]._id %>?_method=DELETE" method="post">
            <a href="/bank/edit/<%= bank[index]._id %>" class="btn btn-info btn-sm">
              <i class="fas fa-pencil-alt"></i>
              Ubah
            </a>
            <button class="btn btn-danger btn-sm">
              <i class="fas fa-trash"></i>
              Hapus
            </button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>